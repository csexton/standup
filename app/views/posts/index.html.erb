<% if (current_user) %>
  <% form_for(Post.new) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.text_area :body, :cols => 20, :rows => 4 %>
    </p>
    <p>
      <%= f.submit "Update Status" %>
    </p>
  <% end %>
<% end %>
<hr>
<div class="posts">
<% for post in @posts %>
  <div class="post_row">
    <div class="post_avatar">
      <%= image_tag gravatar_url_for(post.user.email), :height => 80, :width => 80, :title => "#{post.user.login}'s Avatar"%>
    </div>
    <div class="post_body"><span class="post_user"><%= link_to h(post.user.login), user_path(post.user)  %></span> <%=h post.body %></div>
    <div class="post_edit">
      <%= link_to '<img src="/images/icon/receipt_pencil.png" />', edit_post_path(post) %>
      <%= link_to '<img src="/images/icon/receipt_minus.png" />', post, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
<% end %>
</div>
